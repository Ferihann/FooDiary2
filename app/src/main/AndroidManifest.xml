<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodiary">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Panel.LoginPanel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Panel.RegisterPanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".Panel.HomePanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".Panel.StockPanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".Panel.ProfilePanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Panel.EditProfilePanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".Panel.RecipeCategoryPanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Panel.RecipeSuggestionPanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Panel.RecipePanel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>